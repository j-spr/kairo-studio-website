// src/components/Header.astro
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <!-- Logo -->
      <div class="logo">
        <a href="/" class="logo-link">
          <img
            src="/images/logo-kairo-studio.svg"
            alt="Kairo Studio"
            class="logo-image"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="nav-links desktop-nav">
        <a href="/" class="nav-link">INICIO</a>
        <a href="/proyectos" class="nav-link">PROYECTOS</a>
        <a href="/planes" class="nav-link">PLANES</a>
        <a href="/contacto" class="nav-link nav-link-cta">CONTACTO</a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" aria-label="Abrir menú">
        <span class="hamburger"></span>
        <span class="hamburger"></span>
        <span class="hamburger"></span>
      </button>

      <!-- Mobile Navigation -->
      <div class="mobile-nav">
        <div class="mobile-nav-content">
          <a href="/" class="mobile-nav-link">INICIO</a>
          <a href="/proyectos" class="mobile-nav-link">PROYECTOS</a>
          <a href="/planes" class="mobile-nav-link">PLANES</a>
          <a href="/contacto" class="mobile-nav-link mobile-nav-link-cta"
            >CONTACTO</a
          >
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.1);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 243, 227, 0.1);
    transition: var(--transition-smooth);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0rem;
    min-height: 86px;
  }

  /* Logo */
  .logo-image {
    height: 40px; /* Ajusta según tu logotipo */
    width: auto;
    transition: var(--transition-smooth);
  }

  .logo-image:hover {
    opacity: 0.8;
  }
  .logo-link {
    font-family: var(--font-brand);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-light);
    text-decoration: none;
    text-transform: lowercase;
    letter-spacing: 0.02em;
    transition: var(--transition-smooth);
  }

  .logo-link:hover {
    color: var(--color-orange);
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-link {
    font-family: "Manrope", var(--font-primary);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-light);
    text-decoration: none;
    letter-spacing: 0.5px;
    transition: var(--transition-smooth);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-orange);
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-orange);
    transition: var(--transition-smooth);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* CTA Button */
  .nav-link-cta {
    background-color: var(--color-orange);
    color: var(--color-light);
    padding: 0.25rem 0.75rem;
    border-radius: 10px;
    font-weight: 500;
    border: 2px solid var(--color-orange);
  }

  .nav-link-cta:hover {
    background-color: transparent;
    color: var(--color-orange);
    border-color: var(--color-orange);
  }

  .nav-link-cta::after {
    display: none;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .hamburger {
    width: 25px;
    height: 3px;
    background-color: var(--color-light);
    border-radius: 2px;
    transition: var(--transition-smooth);
  }

  .mobile-menu-btn:hover .hamburger {
    background-color: var(--color-orange);
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: none;
    position: fixed;
    top: 86px;
    left: 0;
    width: 100%;
    height: calc(100vh - 86px);
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(20px);
    z-index: 999;
  }

  .mobile-nav-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 2rem;
  }

  .mobile-nav-link {
    font-family: "Manrope", var(--font-primary);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-light);
    text-decoration: none;
    letter-spacing: 1px;
    transition: var(--transition-smooth);
    padding: 1rem 2rem;
    border-radius: 8px;
  }

  .mobile-nav-link:hover {
    color: var(--color-orange);
    background: rgba(224, 94, 16, 0.1);
  }

  .mobile-nav-link-cta {
    background-color: var(--color-orange);
    color: var(--color-light);
    border: 2px solid var(--color-orange);
  }

  .mobile-nav-link-cta:hover {
    background-color: transparent;
    color: var(--color-orange);
    border-color: var(--color-orange);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .nav {
      padding: 1rem 1.5rem;
    }

    .desktop-nav {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .nav {
      padding: 1rem;
    }

    .logo-link {
      font-size: 1.25rem;
    }
  }

  /* Menu Active States */
  .mobile-nav.active {
    display: block;
  }

  .mobile-menu-btn.active .hamburger:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active .hamburger:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active .hamburger:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }
</style>

<script>
  // Mobile menu functionality
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
    const mobileNav = document.querySelector(".mobile-nav");

    if (mobileMenuBtn && mobileNav) {
      mobileMenuBtn.addEventListener("click", () => {
        mobileMenuBtn.classList.toggle("active");
        mobileNav.classList.toggle("active");

        // Prevent body scroll when menu is open
        document.body.style.overflow = mobileNav.classList.contains("active")
          ? "hidden"
          : "";
      });

      // Close mobile menu when clicking on a link
      const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");
      mobileNavLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenuBtn.classList.remove("active");
          mobileNav.classList.remove("active");
          document.body.style.overflow = "";
        });
      });

      // Close mobile menu when clicking outside
      document.addEventListener("click", (e) => {
        if (
          !mobileMenuBtn.contains(e.target as Node) &&
          !mobileNav.contains(e.target as Node)
        ) {
          mobileMenuBtn.classList.remove("active");
          mobileNav.classList.remove("active");
          document.body.style.overflow = "";
        }
      });
    }
  });

  // Header background on scroll
  window.addEventListener("scroll", () => {
    const header = document.querySelector(".header");
    if (header && header instanceof HTMLElement) {
      if (window.scrollY > 50) {
        header.style.background = "rgba(10, 10, 10, 0.9)";
      } else {
        header.style.background = "rgba(10, 10, 10, 0.1)";
      }
    }
  });
</script>
