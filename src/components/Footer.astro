---
// src/components/Footer.astro
import { SOCIAL_LINKS, SITE_INFO } from '../config/site';
---

<footer class="footer">
  <div class="footer-main">
    <div class="footer-content">
      <!-- Brand Section -->
      <div class="footer-brand">
        <h2 class="brand-title">
          <span class="brand-kairo">KAIRO </span>
          <span class="brand-studio">STUDIO</span>
        </h2>
      </div>

      <!-- Newsletter Section (Centro) -->
      <div class="newsletter-section">
        <p class="newsletter-text">
          Stay ahead in the world of branding and digital design with our Newsletter.
        </p>
        <form class="newsletter-form">
          <input 
            type="email" 
            placeholder="Correo" 
            class="newsletter-input"
            required
          />
          <button type="submit" class="newsletter-button">
            Enviar
          </button>
        </form>
      </div>

      <!-- Footer Links -->
      <div class="footer-links">
        <!-- Menu Column -->
        <div class="footer-column">
          <h3 class="footer-column-title">Menú</h3>
          <nav class="footer-nav">
            <a href="/" class="footer-link">Inicio</a>
            <a href="/proyectos" class="footer-link">Proyectos</a>
            <a href="/contacto" class="footer-link">Contacto</a>
          </nav>
        </div>

        <!-- Social Media Column -->
        <div class="footer-column">
          <h3 class="footer-column-title">Redes sociales</h3>
          <nav class="footer-nav">
            <a href={SOCIAL_LINKS.instagram} target="_blank" rel="noopener" class="footer-link">
              Instagram
            </a>
            <a href={SOCIAL_LINKS.facebook} target="_blank" rel="noopener" class="footer-link">
              Facebook
            </a>
            <a href={SOCIAL_LINKS.tiktok} target="_blank" rel="noopener" class="footer-link">
              TikTok
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <p class="footer-copyright">
        {SITE_INFO.copyrightYear} Kairo Studio. Todos los derechos reservados.
      </p>
      <div class="footer-legal">
        <a href="/privacidad" class="footer-legal-link">Política de privacidad</a>
        <a href="/terminos" class="footer-legal-link">Términos y condiciones</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background-color: var(--color-dark);
  }

  /* Main Footer Section */
  .footer-main {
    width: 100%;
    padding: 80px 40px;
  }

  .footer-content {
    max-width: 1520px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: start;
    gap: 80px;
  }

  /* Brand Section */
  .footer-brand {
    width: auto;
  }

  .brand-title {
    font-family: var(--font-brand);
    font-size: clamp(5rem, 8vw, 9rem);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    margin: 0;
    white-space: nowrap;
  }

  .brand-kairo {
    color: var(--color-light);
  }

  .brand-studio {
    color: var(--color-orange);
  }

  /* Newsletter Section (Centro) */
  .newsletter-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-text {
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 300;
    line-height: 1.5;
    color: var(--color-text-secondary);
    text-align: left;
    margin: 0;
    width: 100%;
  }

  .newsletter-form {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: var(--color-light);
    border-radius: 12px;
    padding: 10px 10px 10px 14px;
    height: 48px;
  }

  .newsletter-input {
    flex: 1;
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 400;
    color: var(--color-dark);
    background: transparent;
    border: none;
    outline: none;
    padding: 0;
  }

  .newsletter-input::placeholder {
    color: var(--color-text-secondary);
  }

  .newsletter-button {
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 500;
    color: var(--color-light);
    background-color: var(--color-orange);
    border: none;
    border-radius: 8px;
    padding: 6px 14px;
    height: 32px;
    cursor: pointer;
    transition: var(--transition-smooth);
    white-space: nowrap;
  }

  .newsletter-button:hover {
    background-color: rgba(224, 94, 16, 0.8);
    transform: translateY(-2px);
  }

  /* Footer Links */
  .footer-links {
    display: flex;
    gap: 80px;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 24px;
    min-width: 120px;
  }

  .footer-column-title {
    font-family: var(-font-primary);
    font-size: 14px;
    font-weight: 300;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-link {
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 300;
    color: var(--color-light);
    text-decoration: none;
    transition: var(--transition-smooth);
  }

  .footer-link:hover {
    color: var(--color-orange);
  }

  /* Footer Bottom */
  .footer-bottom {
    width: 100%;
    background-color: var(--color-dark);
    padding: 24px 40px;
    border-top: 1px solid rgba(255, 243, 227, 0.1);
  }

  .footer-bottom-content {
    max-width: 1520px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 24px;
  }

  .footer-copyright {
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 300;
    color: var(--color-text-tertiary);
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 24px;
  }

  .footer-legal-link {
    font-family: var(--font-primary);
    font-size: 14px;
    font-weight: 300;
    color: var(--color-text-tertiary);
    text-decoration: none;
    transition: var(--transition-smooth);
  }

  .footer-legal-link:hover {
    color: var(--color-light);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-content {
      gap: 40px;
    }

    .footer-links {
      gap: 60px;
    }

    .brand-title {
      font-size: clamp(4rem, 7vw, 7rem);
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      padding: 80px 24px 40px 24px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-brand {
      width: 100%;
    }

    .brand-title {
      font-size: clamp(3.5rem, 12vw, 6rem);
      width: 100%;
    }

    .newsletter-section {
      max-width: 100%;
    }

    .newsletter-text {
      font-size: 14px;
      max-width: 100%;
    }

    .newsletter-form {
      max-width: 100%;
      height: 48px;
    }

    .newsletter-button {
      font-size: 14px;
      height: 32px;
    }

    .footer-links {
      width: 100%;
      justify-content: space-between;
      gap: 40px;
    }

    .footer-bottom {
      padding: 24px;
    }

    .footer-bottom-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .footer-copyright {
      font-size: 12px;
      line-height: 1.5;
    }

    .footer-legal {
      flex-direction: column;
      gap: 16px;
    }

    .footer-legal-link {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .footer-main {
      padding: 80px 24px 40px 24px;
    }

    .footer-brand {
      width: 100%;
    }

    .brand-title {
      font-size: clamp(5rem, 15vw, 5rem);
      width: 100%;
    }

    .newsletter-form {
      height: 44px;
    }

    .newsletter-button {
      height: 30px;
      padding: 5px 12px;
      font-size: 13px;
    }

    .footer-links {
      flex-direction: column;
      gap: 40px;
    }

    .footer-column {
      width: 100%;
    }
  }

  /* Animation setup */
  .footer-brand,
  .newsletter-section,
  .footer-column {
    opacity: 0;
    transform: translateY(30px);
  }

  .footer-brand.animated,
  .newsletter-section.animated,
  .footer-column.animated {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // GSAP Animations for Footer
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // Animate brand
      gsap.from('.footer-brand', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.footer-brand',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Animate newsletter
      gsap.from('.newsletter-section', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        delay: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.newsletter-section',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Animate footer columns
      gsap.from('.footer-column', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        stagger: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.footer-links',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });
    } else {
      // Fallback: add animated classes directly
      setTimeout(() => {
        document.querySelector('.footer-brand')?.classList.add('animated');
        document.querySelector('.newsletter-section')?.classList.add('animated');
        document.querySelectorAll('.footer-column').forEach((col, index) => {
          setTimeout(() => col.classList.add('animated'), index * 200);
        });
      }, 100);
    }
  });

  // Newsletter form handling with validation
  const newsletterForm = document.querySelector('.newsletter-form') as HTMLFormElement;

  newsletterForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const input = newsletterForm.querySelector('.newsletter-input') as HTMLInputElement;
    const button = newsletterForm.querySelector('.newsletter-button') as HTMLButtonElement;

    if (!input) return;

    // Validate email
    const email = input.value.trim();
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (!emailRegex.test(email)) {
      alert('Por favor ingresa un correo válido');
      return;
    }

    const originalText = button.textContent;

    try {
      button.disabled = true;
      button.textContent = 'Enviando...';

      const response = await fetch('/api/newsletter', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email })
      });

      if (!response.ok) {
        throw new Error('Error al suscribirse');
      }

      alert('¡Gracias por suscribirte a nuestro newsletter!');
      input.value = '';

    } catch (error) {
      alert('Hubo un error al suscribirte. Por favor intenta de nuevo.');
    } finally {
      button.disabled = false;
      if (originalText) button.textContent = originalText;
    }
  });
</script>