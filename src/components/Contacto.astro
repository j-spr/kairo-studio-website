---
// src/components/Contacto.astro
import { CONTACT_EMAIL, PHONE_1, PHONE_2 } from '../config/site';
---

<section id="contacto" class="contacto-section">
  <div class="contacto-container">
    <!-- Title - Full Width -->
    <h2 class="contacto-title">Lorem ipsum dolor</h2>
    
    <!-- Content Grid: Info + Form -->
    <div class="contacto-content">
      <!-- Left Column: Info -->
      <div class="contacto-info">
        <p class="contacto-description">
          Lorem ipsum dolor sitadipiscing elit, sed do eiusmod tempor incididunt ut labore 
          <span class="text-highlight">et dolore magna aliqua. Ut enim ad minim veniam, quis</span>
        </p>
        
        <div class="contacto-details">
          <div class="contacto-item">
            <div class="contacto-label">
              <span class="bullet">•</span>
              <span>Whatsapp</span>
            </div>
            <div class="contacto-values">
              <p>{PHONE_1}</p>
              <p>{PHONE_2}</p>
            </div>
          </div>

          <div class="contacto-item">
            <div class="contacto-label">
              <span class="bullet">•</span>
              <span>Envíanos un correo</span>
            </div>
            <p class="contacto-value">{CONTACT_EMAIL}</p>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Form -->
      <div class="contacto-form-wrapper">
        <form class="contacto-form">
          <div class="form-group">
            <input
              type="text"
              name="name"
              class="form-input"
              placeholder="Nombre *"
              required
              minlength="2"
              maxlength="100"
            >
            <span class="form-error" data-error="name"></span>
          </div>

          <div class="form-group">
            <input
              type="email"
              name="email"
              class="form-input"
              placeholder="Correo *"
              required
            >
            <span class="form-error" data-error="email"></span>
          </div>

          <div class="form-group">
            <textarea
              name="message"
              class="form-input form-textarea"
              placeholder="Mensaje (Cuéntanos tu proyecto) *"
              required
              minlength="10"
              maxlength="1000"
              rows="4"
            ></textarea>
            <span class="form-error" data-error="message"></span>
          </div>
          
          <button type="submit" class="form-button">
            <span>Contactate con nosotros</span>
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contacto-section {
    width: 100%;
    background-color: var(--color-light);
    padding: 120px 40px;
    overflow-x: hidden;
  }

  .contacto-container {
    max-width: 1520px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  /* Title - Full Width */
  .contacto-title {
    font-family: var(--font-primary);
    font-size: 96px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.04em;
    color: var(--color-dark);
    margin: 0;
    width: 100%;
  }

  /* Content Grid */
  .contacto-content {
    display: grid;
    grid-template-columns: 550px 1fr;
    gap: 80px;
    align-items: start;
  }

  /* Left Column - Info */
  .contacto-info {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  .contacto-description {
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 300;
    line-height: 1.5;
    letter-spacing: -0.04em;
    color: var(--color-text-primary);
    margin: 0;
  }

  .text-highlight {
    color: var(--color-orange);
  }

  .contacto-details {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .contacto-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .contacto-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.25;
    color: var(--color-text-secondary);
  }

  .bullet {
    color: var(--color-orange);
  }

  .contacto-values {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-left: 16px;
  }

  .contacto-values p,
  .contacto-value {
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin: 0;
  }

  .contacto-value {
    font-size: 24px;
    padding-left: 16px;
  }

  /* Right Column - Form */
  .contacto-form-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }

  .contacto-form {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-input {
    width: 100%;
    height: 60px;
    padding: 20px 16px;
    border: none;
    border-bottom: 1px solid var(--color-text-primary);
    background-color: transparent;
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: 300;
    letter-spacing: 0.04em;
    color: var(--color-dark);
    transition: var(--transition-smooth);
  }

  .form-input:focus {
    outline: none;
    border-bottom-color: var(--color-orange);
  }

  .form-input::placeholder {
    color: var(--color-text-secondary);
    opacity: 1;
  }

  .form-button {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 387px;
    height: 56px;
    padding: 12px 20px;
    border: 1px solid var(--color-orange);
    border-radius: 16px;
    background-color: transparent;
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-dark);
    cursor: pointer;
    transition: var(--transition-smooth);
  }

  .form-button:hover {
    background-color: var(--color-orange);
    color: var(--color-light);
    transform: translateY(-2px);
  }

  .form-button svg {
    flex-shrink: 0;
  }

  /* Form validation styles */
  .form-error {
    display: none;
    color: #ef4444;
    font-size: 14px;
    margin-top: 4px;
    font-family: var(--font-primary);
  }

  .form-error.visible {
    display: block;
  }

  .form-input.error {
    border-color: #ef4444;
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
    font-family: var(--font-primary);
  }

  .form-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .form-button.sending {
    background-color: var(--color-orange);
    color: var(--color-light);
  }

  /* Tablet Responsive */
  @media (max-width: 1024px) {
    .contacto-section {
      padding: 100px 40px;
    }

    .contacto-container {
      gap: 60px;
    }

    .contacto-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .contacto-title {
      font-size: 72px;
      letter-spacing: -0.04em;
    }

    .contacto-description {
      font-size: 18px;
    }

    .form-button {
      width: 100%;
      max-width: 387px;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .contacto-section {
      padding: 80px 24px;
    }

    .contacto-container {
      gap: 40px;
    }

    .contacto-content {
      gap: 40px;
    }

    .contacto-info {
      gap: 40px;
    }

    .contacto-title {
      font-size: 48px;
      line-height: 1.1;
    }

    .contacto-description {
      font-size: 16px;
    }

    .contacto-label {
      font-size: 14px;
    }

    .contacto-values p {
      font-size: 16px;
    }

    .contacto-value {
      font-size: 20px;
    }

    .form-input {
      font-size: 16px;
    }

    .form-button {
      width: 100%;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .contacto-section {
      padding: 80px 24px;
    }

    .contacto-title {
      font-size: 48px;
    }

    .contacto-description {
      font-size: 20px;
      line-height: 1.5;
    }

    .form-button {
      padding: 12px 20px;
      font-size: 16px;
    }
  }

  /* Elements are visible by default - no additional CSS needed */
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('Contacto section loaded');

    // Form handling with validation
    const form = document.querySelector('.contacto-form') as HTMLFormElement;

    if (form) {
      // Clear errors on input
      form.querySelectorAll('.form-input').forEach(input => {
        input.addEventListener('input', () => {
          input.classList.remove('error');
          const errorSpan = input.parentElement?.querySelector('.form-error');
          errorSpan?.classList.remove('visible');
        });
      });

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Clear previous errors
        form.querySelectorAll('.form-error').forEach(error => {
          error.classList.remove('visible');
        });
        form.querySelectorAll('.form-input').forEach(input => {
          input.classList.remove('error');
        });

        // Get form data
        const formData = new FormData(form);
        const name = (formData.get('name') as string || '').trim();
        const email = (formData.get('email') as string || '').trim();
        const message = (formData.get('message') as string || '').trim();

        // Client-side validation
        let hasErrors = false;

        // Sanitize and validate name
        const sanitizedName = name.replace(/[<>]/g, '').replace(/javascript:/gi, '');
        if (sanitizedName.length < 2) {
          showError('name', 'El nombre debe tener al menos 2 caracteres');
          hasErrors = true;
        } else if (sanitizedName.length > 100) {
          showError('name', 'El nombre es demasiado largo');
          hasErrors = true;
        }

        // Validate email
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          showError('email', 'Por favor ingresa un correo válido');
          hasErrors = true;
        }

        // Sanitize and validate message
        const sanitizedMessage = message.replace(/[<>]/g, '').replace(/javascript:/gi, '');
        if (sanitizedMessage.length < 10) {
          showError('message', 'El mensaje debe tener al menos 10 caracteres');
          hasErrors = true;
        } else if (sanitizedMessage.length > 1000) {
          showError('message', 'El mensaje es demasiado largo (máx. 1000 caracteres)');
          hasErrors = true;
        }

        if (hasErrors) return;

        // Prepare sanitized data
        const sanitizedData = {
          name: sanitizedName,
          email: email,
          message: sanitizedMessage
        };

        // Send to API
        const button = form.querySelector('.form-button') as HTMLButtonElement;
        const originalText = button.querySelector('span')?.textContent;

        try {
          button.disabled = true;
          button.classList.add('sending');
          if (button.querySelector('span')) {
            button.querySelector('span')!.textContent = 'Enviando...';
          }

          const response = await fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(sanitizedData)
          });

          if (!response.ok) {
            throw new Error('Error al enviar el mensaje');
          }

          // Success
          alert('¡Mensaje enviado exitosamente! Te contactaremos pronto.');
          form.reset();

        } catch (error) {
          alert('Hubo un error al enviar el mensaje. Por favor intenta de nuevo.');
        } finally {
          button.disabled = false;
          button.classList.remove('sending');
          if (button.querySelector('span') && originalText) {
            button.querySelector('span')!.textContent = originalText;
          }
        }
      });
    }

    function showError(field: string, message: string) {
      const errorSpan = document.querySelector(`[data-error="${field}"]`);
      const input = document.querySelector(`[name="${field}"]`);

      if (errorSpan) {
        errorSpan.textContent = message;
        errorSpan.classList.add('visible');
      }

      if (input) {
        input.classList.add('error');
      }
    }
  });
</script>