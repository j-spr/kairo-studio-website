---

<section id="contacto" class="contacto-section">
  <div class="contacto-container">
    <!-- Title - Full Width -->
    <h2 class="contacto-title">Lorem ipsum dolor</h2>
    
    <!-- Content Grid: Info + Form -->
    <div class="contacto-content">
      <!-- Left Column: Info -->
      <div class="contacto-info">
        <p class="contacto-description">
          Lorem ipsum dolor sitadipiscing elit, sed do eiusmod tempor incididunt ut labore 
          <span class="text-highlight">et dolore magna aliqua. Ut enim ad minim veniam, quis</span>
        </p>
        
        <div class="contacto-details">
          <div class="contacto-item">
            <div class="contacto-label">
              <span class="bullet">•</span>
              <span>Whatsapp</span>
            </div>
            <div class="contacto-values">
              <p>(313) 305 0878</p>
              <p>(316) 871 1671</p>
            </div>
          </div>
          
          <div class="contacto-item">
            <div class="contacto-label">
              <span class="bullet">•</span>
              <span>Envíanos un correo</span>
            </div>
            <p class="contacto-value">hola@kairostudio.com.co</p>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Form -->
      <div class="contacto-form-wrapper">
        <form class="contacto-form">
          <div class="form-group">
            <input 
              type="text" 
              class="form-input" 
              placeholder="Nombre *" 
              required
            >
          </div>
          
          <div class="form-group">
            <input 
              type="email" 
              class="form-input" 
              placeholder="Correo *" 
              required
            >
          </div>
          
          <div class="form-group">
            <input 
              type="text" 
              class="form-input" 
              placeholder="Mensaje (Cuéntanos tu proyecto)" 
              required
            >
          </div>
          
          <button type="submit" class="form-button">
            <span>Contactate con nosotros</span>
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contacto-section {
    width: 100%;
    background-color: var(--color-light);
    padding: 120px 40px;
  }

  .contacto-container {
    max-width: 1520px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  /* Title - Full Width */
  .contacto-title {
    font-family: var(--font-primary);
    font-size: 96px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.04em;
    color: var(--color-dark);
    margin: 0;
    width: 100%;
    
    /* Animation setup */
    opacity: 0;
    transform: translateY(30px);
  }

  /* Content Grid */
  .contacto-content {
    display: grid;
    grid-template-columns: 550px 1fr;
    gap: 80px;
    align-items: start;
  }

  /* Left Column - Info */
  .contacto-info {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  .contacto-description {
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 300;
    line-height: 1.5;
    letter-spacing: -0.04em;
    color: var(--color-text-primary);
    margin: 0;
    
    /* Animation setup */
    opacity: 0;
    transform: translateY(30px);
  }

  .text-highlight {
    color: var(--color-orange);
  }

  .contacto-details {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .contacto-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
    
    /* Animation setup */
    opacity: 0;
    transform: translateY(30px);
  }

  .contacto-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.25;
    color: var(--color-text-secondary);
  }

  .bullet {
    color: var(--color-orange);
  }

  .contacto-values {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-left: 16px;
  }

  .contacto-values p,
  .contacto-value {
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin: 0;
  }

  .contacto-value {
    font-size: 24px;
    padding-left: 16px;
  }

  /* Right Column - Form */
  .contacto-form-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    
    /* Animation setup */
    opacity: 0;
    transform: translateX(50px);
  }

  .contacto-form {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-input {
    width: 100%;
    height: 60px;
    padding: 20px 16px;
    border: none;
    border-bottom: 1px solid var(--color-text-primary);
    background-color: transparent;
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: 300;
    letter-spacing: 0.04em;
    color: var(--color-dark);
    transition: var(--transition-smooth);
  }

  .form-input:focus {
    outline: none;
    border-bottom-color: var(--color-orange);
  }

  .form-input::placeholder {
    color: var(--color-text-secondary);
    opacity: 1;
  }

  .form-button {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 387px;
    height: 56px;
    padding: 12px 20px;
    border: 1px solid var(--color-orange);
    border-radius: 16px;
    background-color: transparent;
    font-family: var(--font-primary);
    font-size: 20px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-dark);
    cursor: pointer;
    transition: var(--transition-smooth);
  }

  .form-button:hover {
    background-color: var(--color-orange);
    color: var(--color-light);
    transform: translateY(-2px);
  }

  .form-button svg {
    flex-shrink: 0;
  }

  /* Tablet Responsive */
  @media (max-width: 1024px) {
    .contacto-section {
      padding: 100px 40px;
    }

    .contacto-container {
      gap: 60px;
    }

    .contacto-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .contacto-title {
      font-size: 72px;
      letter-spacing: -0.04em;
    }

    .contacto-description {
      font-size: 18px;
    }

    .form-button {
      width: 100%;
      max-width: 387px;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .contacto-section {
      padding: 80px 24px;
    }

    .contacto-container {
      gap: 40px;
    }

    .contacto-content {
      gap: 40px;
    }

    .contacto-info {
      gap: 40px;
    }

    .contacto-title {
      font-size: 48px;
      line-height: 1.1;
    }

    .contacto-description {
      font-size: 16px;
    }

    .contacto-label {
      font-size: 14px;
    }

    .contacto-values p {
      font-size: 16px;
    }

    .contacto-value {
      font-size: 20px;
    }

    .form-input {
      font-size: 16px;
    }

    .form-button {
      width: 100%;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .contacto-section {
      padding: 80px 24px;
    }

    .contacto-title {
      font-size: 48px;
    }

    .contacto-description {
      font-size: 20px;
      line-height: 1.5;
    }

    .form-button {
      padding: 12px 20px;
      font-size: 16px;
    }
  }

  /* Animation Classes */
  .contacto-title.animated,
  .contacto-description.animated,
  .contacto-item.animated,
  .contacto-form-wrapper.animated {
    opacity: 1;
    transform: translateY(0) translateX(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // Animate title first
      gsap.from('.contacto-title', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.contacto-title',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Animate description
      gsap.from('.contacto-description', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        delay: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.contacto-description',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Animate contact items
      gsap.from('.contacto-item', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        stagger: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.contacto-details',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });

      // Animate form
      gsap.from('.contacto-form-wrapper', {
        opacity: 0,
        x: 50,
        duration: 1,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.contacto-form-wrapper',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      });
    } else {
      // Fallback animations
      setTimeout(() => {
        document.querySelector('.contacto-title')?.classList.add('animated');
        setTimeout(() => {
          document.querySelector('.contacto-description')?.classList.add('animated');
        }, 200);
        setTimeout(() => {
          document.querySelectorAll('.contacto-item').forEach((item, index) => {
            setTimeout(() => item.classList.add('animated'), index * 200);
          });
        }, 400);
        setTimeout(() => {
          document.querySelector('.contacto-form-wrapper')?.classList.add('animated');
        }, 600);
      }, 100);
    }

    // Form handling
    const form = document.querySelector('.contacto-form');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      console.log('Formulario de contacto enviado');
      // Lógica para enviar el formulario
    });
  });
</script>