// src/components/Separador.astro
---

<section class="separador">
  <div class="separador-background">
    <img 
      src="/images/kairo-studio-bg-desktop.png"
      alt="" 
      class="background-image desktop"
      aria-hidden="true"
    />
    <img 
      src="/images/kairo-studio-bg-mobile.png"
      alt="" 
      class="background-image mobile"
      aria-hidden="true"
    />
  </div>
  
  <div class="separador-content">
    <span class="separador-small-text">Lo que nos impulsa</span>

    <h2 class="separador-title">
      <span class="title-line">Creemos que cada marca tiene el potencial de dejar huella. Nuestro propósito es <em class="text-muted">ayudarte a construir esa presencia que inspire y genere resultados reales.</em></span>
    </h2>
  </div>
</section>

<style>
  .separador {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-dark);
    overflow: hidden;
    padding: 120px 80px;
  }

  /* Background Pattern */
  .separador-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .background-image {
    max-width: none;
    opacity: 0.09;
  }

  /* Desktop image */
  .background-image.desktop {
    display: block;
    width: auto;
    height: 100%;
  }

  /* Mobile image - hidden by default */
  .background-image.mobile {
    display: none;
    width: 100%;
    height: auto;
  }

  /* Content */
  .separador-content {
    position: relative;
    z-index: 10;
    max-width: 1440px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 24px;
    text-align: center;
  }

  .separador-small-text {
    font-family: var(--font-primary);
    font-size: 24px;
    font-weight: 400;
    line-height: auto;
    letter-spacing: -0.04em;
    color: var(--color-orange);
    opacity: 0;
    transition: opacity 1s ease-out;
  }

  .separador-small-text.animate {
    opacity: 1;
  }

  .separador-title {
    font-family: var(--font-primary);
    font-size: clamp(2rem, 4vw, 48px);
    font-weight: 500;
    line-height: 1.4;
    letter-spacing: -0.04em;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .title-line {
    display: block;
    color: var(--color-light);
  }

  /* Usar strong y em para los colores */
  .text-highlight,
  strong.text-highlight {
    color: var(--color-orange);
    font-weight: 500;
    font-style: normal;
  }

  .text-muted,
  em.text-muted {
    color: var(--color-text-tertiary);
    font-weight: 500;
    font-style: normal;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .separador {
      padding: 120px 24px;
      min-height: 80vh;
    }

    .separador-content {
      gap: 24px;
    }

    .separador-small-text {
      font-size: 16px;
      letter-spacing: 0.04em;
    }

    .separador-title {
      font-size: clamp(1.5rem, 6vw, 24px);
      letter-spacing: 0.04em;
      line-height: 1.3;
    }

    /* Switch to mobile image */
    .background-image.desktop {
      display: none;
    }

    .background-image.mobile {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }

  @media (max-width: 480px) {
    .separador {
      padding: 100px 24px;
      min-height: 85vh;
    }
  }

  /* Animaciones */
  .separador-title {
    opacity: 0;
    transform: scale(0.9);
    transition: opacity 1.2s ease-out, transform 1.2s ease-out;
  }

  .separador-small-text.animate {
    opacity: 1;
  }

  .separador-title.animate {
    opacity: 1;
    transform: scale(1);
  }

  /* Parallax background */
  .separador-background {
    transition: transform 0.1s ease-out;
    will-change: transform;
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .separador-small-text,
    .separador-title {
      transition: none;
      opacity: 1;
      transform: none;
    }

    .separador-background {
      transform: none !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const separador = document.querySelector('.separador');
    const smallText = document.querySelector('.separador-small-text');
    const title = document.querySelector('.separador-title');
    const background = document.querySelector('.separador-background');

    // Configurar Intersection Observer
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Animar texto pequeño primero
          if (smallText) {
            smallText.classList.add('animate');
          }

          // Animar título después con un delay
          if (title) {
            setTimeout(() => {
              title.classList.add('animate');
            }, 400);
          }

          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observar la sección
    if (separador) {
      observer.observe(separador);
    }

    // Parallax effect en background
    if (background && window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const separadorRect = separador.getBoundingClientRect();
        const separadorTop = separadorRect.top + scrolled;
        const separadorHeight = separadorRect.height;

        // Solo aplicar parallax cuando la sección es visible
        if (scrolled + window.innerHeight > separadorTop && scrolled < separadorTop + separadorHeight) {
          const offset = (scrolled - separadorTop) * 0.15;
          background.style.transform = `translateY(${offset}px)`;
        }
      });
    }
  });
</script>